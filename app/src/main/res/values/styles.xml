<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="actionBarPopupTheme">@style/overflowStyle</item>
        <item name="alertDialogTheme">@style/MyDialogTheme</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bar_background</item>
        <item name="colorAccent">@color/word_green</item>
    </style>

    <style name="CustomActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Customize your theme here. -->
        <item name="background">@color/bar_background</item>
    </style>

    <style name="overflowStyle" parent="@style/Widget.AppCompat.ListPopupWindow">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/overflow_background</item>
        <item name="android:textColor">@color/bar_text</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/overflow_background</item>
        <item name="android:textColorPrimary">@color/bar_text</item>
    </style>

</resources>
